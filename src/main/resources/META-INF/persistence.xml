<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="com.movienight">
		<description>
            Hibernate using Oracle
        </description>
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.movienight.model.User</class>
		<class>com.movienight.model.Genre</class>
		<class>com.movienight.model.Movie</class>
		<class>com.movienight.model.Event</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.driver.OracleDriver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:oracle:thin:@localhost:1521:xe" />
			<property name="javax.persistence.jdbc.user" value="movienight" />
			<property name="javax.persistence.jdbc.password" value="secret" />

			<property name="hibernate.show_sql" value="false" />	<!-- true: shows each SQL -->
			<property name="hibernate.hbm2ddl.auto" value="create" />  <!-- create: creates database -->

			<property name="hibernate.default_schema" value="MOVIENIGHT" />
			<property name="hibernate.enable_lazy_load_no_trans" value="true" />
		</properties>
	</persistence-unit>
</persistence>